{
  "name": "rag-mongodb-js",
  "version": "1.0.0",
  "description": "Sistema RAG NoSQL con MongoDB - Proyecto Final Bases de Datos No Relacionales",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "load-news": "node src/scripts/loadNews.js",
    "generate-embeddings": "node src/scripts/generateEmbeddings.js",
    "setup-indexes": "node src/scripts/setupIndexes.js",
    "test-cases": "node src/scripts/testCases.js",
    "remove-schema-validation": "node src/scripts/removeSchemaValidation.js",
    "fix-sharp": "npm uninstall sharp && npm install --include=optional sharp"
