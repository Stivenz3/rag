    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
